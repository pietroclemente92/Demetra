<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="italy.company.pietroclemente92.demetra.UserProductViewActivity"
    android:orientation="vertical"
    android:background="@color/home_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/grey_circular_border"
            android:src="@drawable/icon_back_row"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Product"
                android:fontFamily="@font/baloo"
                android:textSize="27sp"/>
            <TextView
                android:id="@+id/typeProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type product"
                android:textSize="15sp"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_shop_vector"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_on_boarding"
        android:orientation="vertical"
        android:padding="20dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="20dp">

           <TextView
               android:id="@+id/priceProduct"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Prezzo: 0.23 Euro"
               android:textSize="24sp"
               android:fontFamily="@font/baloo"
               android:textColor="#fff"/>

           <TextView
               android:id="@+id/countProduct"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="DisponibilitÃ : 10"
               android:textSize="24sp"
               android:fontFamily="@font/baloo"
               android:textColor="#fff"
               android:paddingTop="20dp"/>

           <TextView
               android:id="@+id/kmProduct"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Prodotto a Km0: Si/No"
               android:textSize="24sp"
               android:fontFamily="@font/baloo"
               android:textColor="#fff"
               android:paddingTop="20dp"/>

           <TextView
               android:id="@+id/pesticideProduct"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pesticidi: Si/No"
               android:textSize="24sp"
               android:fontFamily="@font/baloo"
               android:textColor="#fff"
               android:paddingTop="20dp"/>

           <Button
               android:id="@+id/shop_view_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/let_get_started_btn"
               android:text="Visualizza Negozio"
               android:layout_marginTop="20dp"/>
       </LinearLayout>
    </LinearLayout>

</LinearLayout>